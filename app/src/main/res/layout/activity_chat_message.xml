<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.ChatMessageActivity"
    android:fitsSystemWindows="true">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="15dp"
      android:background="@drawable/call_btn_bg"
      android:orientation="vertical"
      android:elevation="8dp"
      android:visibility="gone"
      android:id="@+id/call">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="20dp">
      <de.hdodenhof.circleimageview.CircleImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:src="@drawable/user_profile"
          app:civ_border_color="@color/blue"
          app:civ_border_width="2dp"/>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginStart="10dp"
          android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="incoming call form User"
            android:textColor="@color/white1"
            tools:ignore="HardcodedText" />
      </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/call_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="15dp"
            android:background="@drawable/call_btn_answer"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            tools:ignore="UseCompoundDrawables,UselessParent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/callpickbtn"
                android:contentDescription="@string/todo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"/>
        </LinearLayout>


      <LinearLayout
          android:id="@+id/call_decline"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:layout_marginHorizontal="25dp"
          android:layout_marginVertical="15dp"
          android:paddingVertical="10dp"
          android:paddingHorizontal="20dp"
          android:background="@drawable/call_btn_decline"
          tools:ignore="UseCompoundDrawables,UselessParent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/callendbtn"
            android:contentDescription="@string/todo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/decline"
            android:textColor="@color/white"
            android:layout_marginStart="5dp"/>
      </LinearLayout>

    </LinearLayout>


  </LinearLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tool">
      <com.google.android.material.appbar.MaterialToolbar
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
          app:popupTheme="@style/Widget.AppCompat.PopupMenu"
          android:id="@+id/toolbar"
          app:contentInsetStartWithNavigation="0dp"
          android:padding="5dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user_profile"
            android:id="@+id/image"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:gravity="center_vertical">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/user"
              android:textColor="@color/white"
              android:textSize="20sp"
              android:textStyle="bold"
              android:fontFamily="sans-serif"
              android:textFontWeight="500"
              android:id="@+id/userName"
              android:maxLines="1"
              android:ellipsize="end"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/offline"
              android:fontFamily="sans-serif"
              android:textSize="16sp"
              android:textFontWeight="400"
              android:id="@+id/status"/>
        </LinearLayout>
      </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

  <androidx.recyclerview.widget.RecyclerView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@id/tool"
      android:layout_above="@+id/mess_block"
      android:id="@+id/recycler_view"/>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_alignParentBottom="true"
      android:layout_marginStart="10dp"
      android:layout_marginEnd="10dp"
      android:layout_marginBottom="10dp"
      android:id="@+id/mess_block"
      android:layout_marginTop="5dp">
    <EditText
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="@string/type_a_message"
        android:layout_weight="1"
        android:autofillHints=""
        android:inputType="text"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/message_sender_bg"
        android:id="@+id/message"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/send"
        android:contentDescription="@string/todo"
        android:layout_marginStart="5dp"
        android:id="@+id/message_send_btn"/>
  </LinearLayout>

  </RelativeLayout>